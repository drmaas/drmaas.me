---
import { capitalizeString } from "src/misc";
export interface Props {
  navLink: string,
  text: string,
  activeLink: string,
  icon: string,
  absolute: boolean,
}

const { navLink, text, activeLink, icon, absolute } = Astro.props as Props;
const baseSite = import.meta.env.BASE_URL;
const url = absolute ? navLink : baseSite + (navLink === 'home' ? '' : `${navLink}/`);
---

<li class:list={[{ 'current-page' : navLink===activeLink
  }, "after:block after:mx-auto after:h-[0.15em] after:bottom-0 after:w-0 after:bg-green-700 dark:after:bg-amber-400 after:transition-[all_ease_in_out_300ms] after:mt-1 hover:after:w-full"
  ]}>
  <a href={url} target={absolute ? "_blank" : ""} tabindex={navLink===activeLink? -1 : null} class:list={[{'current-page': navLink===activeLink
    }, "flex hover:text-black dark:hover:text-white p-1" ]}>
    <Fragment set:html={icon} />
    <span class="pl-2 pointer-events-none">{text === undefined ? capitalizeString(navLink) : text}</span>
  </a>
</li>

<style>
  .current-page {
    color: hsl(var(--sf));
    pointer-events: none;
  }
</style>
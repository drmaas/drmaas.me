---
import config from "src/config.js";
export interface Props {
  tagName: string
}

const { tagName } = Astro.props;
const { tagNames, tagColors } = config;

const tagColor = tagNames?.[tagName] ?? 'default';
---

<a class="badge badge-lg hover:badge-primary transition-colors duration-200 font-medium"
  style={`background-color: ${tagColors[tagColor] + '20'};border-color: ${tagColors[tagColor]};color: ${tagColors[tagColor]};`} 
  href={`${import.meta.env.BASE_URL}tags/${tagName}/`}>
  #{tagName}
</a>
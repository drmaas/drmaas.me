---
import config from "src/config.js";
export interface Props {
  tagName: string
}

const { tagName } = Astro.props;
const { tagNames, tagColors } = config;

const tagColor = tagNames?.[tagName] ?? 'default';
---

<a class="tag-button badge badge-lg hover:badge-primary transition-colors duration-200 font-medium"
  style={`--tag-color: ${tagColors[tagColor]};`} 
  href={`${import.meta.env.BASE_URL}tags/${tagName}/`}>
  #{tagName}
</a>

<style>
  .tag-button {
    background-color: color-mix(in srgb, var(--tag-color) 12%, transparent);
    border-color: var(--tag-color);
    color: var(--tag-color);
  }
</style>
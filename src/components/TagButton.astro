---
import config from "src/config.js";
export interface Props {
  tagName: string
}

const { tagName } = Astro.props;
const { tagNames, tagColors } = config;

const tagColor = tagNames?.[tagName] ?? 'default';
---

<a class="tag-button badge badge-lg hover:badge-primary transition-colors duration-200 font-medium border-2"
  style={`--tag-color: ${tagColors[tagColor]};border-color: var(--tag-color);color: var(--tag-color);`} 
  href={`${import.meta.env.BASE_URL}tags/${tagName}/`}
  aria-label={`View all posts tagged with ${tagName}`}>
  #{tagName}
</a>

<style>
  .tag-button {
    background-color: transparent;
  }
  
  .tag-button:hover {
    opacity: 0.9;
  }
</style>